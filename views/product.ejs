         <script>
            $('#lightSlider').lightSlider({ gallery: true, item: 1, loop: true, slideMargin: 0, thumbItem: 9 });

            //getting product id from url
            var product_id = new URL(location.href).searchParams.get("productID");
            if (!product_id) {
               window.location.href = "<%=baseURL%>/pageNotFound";
            }

            var price_in_paise = 0;
            var order_id = "";
            $(document).ready(function () {

               $.ajax({
                  url: "<%=baseURL%>/api/oneProduct/" + product_id + "/" + cookie_check,
                  type: "GET",
                  dataType: "json",
                  async: false,
                  success: (data) => {
                     console.log(data);
                     $("#product_title").text(data.product_name);
                     $("#product_price").text(data.price);
                     $("#product_description").text(data.description);
                     $("#product_owner").text(data.owner);
                     $("#img-1").attr("src", "<%=baseURL%>/" + data.profileImg);
                     // $("#img-2").attr("src","<%=baseURL%>/"+data.profileImg);
                     if (!data.favourite) {
                        $("#favouriteBtn .fa").addClass("fa-heart-o");
                     } else {
                        $("#favouriteBtn .fa").addClass("fa-heart");
                     }
                     price_in_paise = data.price * 100;
                  },
                  error: (error) => {
                     console.log(error);
                     alert("Something went wrong!");
                  }
               })


               $("#pay-button").click(function (e) {
                  e.preventDefault();
                  console.log(price_in_paise);
                  if (price_in_paise < 100) {
                     console.log(price_in_paise);
                     return;
                  }
                  $.ajax({
                     url: "<%=baseURL%>/payment/createOrder",
                     type: "post",
                     dataType: "JSON",
                     async: false,
                     data: {
                        "amount": price_in_paise,
                        "currency": "INR",
                        "receipt": product_id,
                        "notes": {
                           "description": "just a test for transaction",
                           "language": "NodeJS",
                           "access": "unlimited"
                        }
                     },
                     success: function (data) {
                        console.log(data);
                        order_id = data.id;
                        razorpayObject.open();
                     },
                     error: function (data) {
                        console.log(data);
                        alert("Something went wrong!");
                     }
                  });
               });
            });
         </script>

