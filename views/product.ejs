                        // location.reload();
                        if (!data.response) {
                           $("#favouriteBtn .fa").removeClass("fa-heart");
                           $("#favouriteBtn .fa").addClass("fa-heart-o");
                        } else {
                           $("#favouriteBtn .fa").removeClass("fa-heart-o");
