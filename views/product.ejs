         <script>
            $("#sendReview").click((e) => {
               e.preventDefault();
               console.log($("#reviewMessage").val());
               sendMessage({
                  email: cookie_check,
                  productId: product_id,
                  message: $("#reviewMessage").val()
               });
               $("#reviewMessage").val('');
            });
            getMessages();

            function addMessages(message) {
               console.log(message);
               $("#show-comments").append(`
               <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex flex-row align-items-center">
                           <img src="https://i.imgur.com/o5uMfKo.jpg" class="rounded-circle profile-image">
                           <div class="d-flex flex-column ml-1 comment-profile">
                              <div>${capitalFirst(message.userId.name)}</div>
                              <span class="username">${message.review}</span>
                           </div>
                        </div>
                        <div class="date"> <span class="text-muted">${Date.now()}</span> </div>
                     </div>
                     <hr>
               `);
               var objDiv = document.getElementById("show-comments");
               objDiv.scrollTop = objDiv.scrollHeight;

            }

            function getMessages() {
               $.get('<%=baseURL%>/api/review/' + product_id, (data) => {
                  // console.log(data)
                  data.forEach(addMessages);
               });
            }

            function sendMessage(message) {
               $.ajax({
                  url: "<%=baseURL%>/api/review",
                  type: "POST",
                  async: false,
                  dataType: "json",
                  data: message,
                  success: (data) => {
                     // console.log(data);
                     $("#show-comments").html("")
                     getMessages();
                  },
                  error: (data) => {
                     console.log(data);
                  }
               })
            }
